APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=pusher
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

WORKOS_CLIENT_ID=
WORKOS_API_KEY=
WORKOS_REDIRECT_URL="http://localhost:8000/authenticate"

# Admin Override
# Comma-separated list of emails that bypass admin permission checks
# ADMIN_OVERRIDE_EMAILS=admin@example.com,lester@hurtado.ph

# Voucher Generation UI Version
# Controls which version of the voucher generation UI is displayed
GENERATE_UI_VERSION=v2
GENERATE_UI_V2_ENABLED=false

# Settlement Vouchers Feature
# Comma-separated list of emails that should have settlement-vouchers feature enabled
# SETTLEMENT_VOUCHERS_ENABLED_FOR=lester@hurtado.ph,admin@disburse.cash

# Location Validation Configuration
# Auto-add location input field when location validation is enabled
LOCATION_VALIDATION_AUTO_ADD_INPUT=true
# Auto-fill current browser location when enabling location validation
LOCATION_VALIDATION_AUTO_FILL_CURRENT=true
# Default radius and step size for location validation (in km)
GENERATE_VOUCHER_LOCATION_DEFAULT_RADIUS=0.5
GENERATE_VOUCHER_LOCATION_RADIUS_STEP=0.5

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Pusher Broadcasting Configuration
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=ap1
PUSHER_PORT=443
PUSHER_SCHEME=https

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"

# OpenCage API Key (for geocoding - reverse lookup lat/lng to address)
# Get free key at: https://opencagedata.com/
VITE_OPENCAGE_KEY=

# Mapbox API Key (for static map images)
# Get free key at: https://account.mapbox.com/auth/signup/
VITE_MAPBOX_TOKEN=

# Redeem Widget Configuration (for iframe embedding)
# REDEEM_WIDGET_SHOW_LOGO=true
# REDEEM_WIDGET_SHOW_APP_NAME=true
# REDEEM_WIDGET_SHOW_LABEL=true
# REDEEM_WIDGET_SHOW_TITLE=true
# REDEEM_WIDGET_SHOW_DESCRIPTION=false
# REDEEM_WIDGET_TITLE="Redeem Voucher"
# REDEEM_WIDGET_DESCRIPTION=""
# REDEEM_WIDGET_LABEL="Voucher Code"
# REDEEM_WIDGET_PLACEHOLDER="Enter voucher code"
# REDEEM_WIDGET_BUTTON_TEXT="Start Redemption"
# REDEEM_WIDGET_BUTTON_PROCESSING_TEXT="Checking..."

# Sidebar Balance Configuration
# Configure the wallet balance display in the application sidebar
# SIDEBAR_SHOW_BALANCE=true
# SIDEBAR_BALANCE_LABEL="Wallet Balance"
# SIDEBAR_BALANCE_STYLE=compact # Options: compact, full
# SIDEBAR_BALANCE_SHOW_CURRENCY=true
# SIDEBAR_BALANCE_SHOW_ICON=true
# SIDEBAR_BALANCE_SHOW_REFRESH=false
# SIDEBAR_BALANCE_SHOW_UPDATED=false
# SIDEBAR_BALANCE_POSITION=above-footer # Options: above-footer, in-content

# QR Merchant Name Template
# Configure how merchant name appears in QR codes (e.g., GCash display)
# Available variables: {name}, {city}, {app_name}
# Examples:
#   "{name} • {city}"     => "3neti R&D OPC • Manila"
#   "{name}"              => "3neti R&D OPC"
#   "{app_name}"          => "Redeem-X"
#   "{city} - {name}"     => "Manila - 3neti R&D OPC"
QR_MERCHANT_NAME_TEMPLATE="{name} - {city}"
QR_MERCHANT_NAME_UPPERCASE=false
QR_MERCHANT_NAME_FALLBACK="${APP_NAME}"

# Payment Gateway Configuration
PAYMENT_GATEWAY_QR_CACHE_TTL=3600

# Gateway HTTP Timeout Configuration
# Configure timeout values for payment gateway API calls (in seconds)
# IMPORTANT: Must be less than PHP's max_execution_time (default 30s)
# Recommended: 15s timeout, 5s connect timeout
GATEWAY_HTTP_TIMEOUT=15
GATEWAY_HTTP_CONNECT_TIMEOUT=5

# Disbursement Failure Alerts
# Configure notifications when disbursements fail for immediate escalation
DISBURSEMENT_ALERT_ENABLED=true
DISBURSEMENT_ALERT_EMAILS=support@example.com,ops@example.com

# NetBank Direct Checkout (Top-Up via redirect to bank/e-wallet)
NETBANK_DIRECT_CHECKOUT_USE_FAKE=true
NETBANK_DIRECT_CHECKOUT_ACCESS_KEY=
NETBANK_DIRECT_CHECKOUT_SECRET_KEY=
NETBANK_DIRECT_CHECKOUT_ENDPOINT=https://api-sandbox.netbank.ph/v1/collect/checkout

# Top-Up Configuration
TOP_UP_MIN_AMOUNT=1
TOP_UP_MAX_AMOUNT=50000
TOP_UP_REFERENCE_PREFIX=TOPUP
# Auto-confirm top-ups in fake mode (for testing)
TOP_UP_AUTO_CONFIRM_FAKE=false

# Public Load Page Configuration (/load/{uuid})
# Configure the public-facing QR code display page
LOAD_WALLET_PUBLIC_SHOW_LOGO=true
LOAD_WALLET_PUBLIC_TITLE_PREFIX="Pay"
LOAD_WALLET_PUBLIC_SHOW_MERCHANT_NAME=true
LOAD_WALLET_PUBLIC_SHOW_MERCHANT_CITY=true
LOAD_WALLET_PUBLIC_INSTRUCTION_TITLE="Scan to Pay"
LOAD_WALLET_PUBLIC_INSTRUCTION_DESCRIPTION="Use your GCash, PayMaya, or any QR Ph compatible app"
LOAD_WALLET_PUBLIC_SHOW_FOOTER=true
# LOAD_WALLET_PUBLIC_FOOTER_TEXT="Custom footer text" # Leave commented for "Powered by {app_name}"

# Voucher Metadata Configuration
# Information embedded in vouchers for transparency and traceability
VOUCHER_VERSION=1.0.0
VOUCHER_COPYRIGHT="3neti R&D OPC"

# Splash Page Configuration
# Configure the splash screen shown before voucher redemption
SPLASH_ENABLED=true
SPLASH_DEFAULT_TIMEOUT=5
SPLASH_APP_AUTHOR="3neti R&D OPC"
SPLASH_COPYRIGHT_HOLDER="3neti R&D OPC"
SPLASH_COPYRIGHT_YEAR=2025
SPLASH_BUTTON_LABEL="Continue Now"
# Optional: Custom default splash content (supports {app_name}, {app_version}, {voucher_code}, etc.)
# SPLASH_DEFAULT_CONTENT="<div class='text-center'><h1>{app_name}</h1><p>Redeeming {voucher_code}</p></div>"

# Success Page Configuration
# Configure the success page shown after voucher redemption
SUCCESS_BUTTON_LABEL="Continue Now"
SUCCESS_DASHBOARD_BUTTON_LABEL="Go to Dashboard"
SUCCESS_REDEEM_ANOTHER_LABEL="Redeem Another"
# Optional: Custom default success content (supports {app_name}, {voucher_code}, {amount}, etc.)
# SUCCESS_DEFAULT_CONTENT="<h1>Success!</h1><p>Voucher {voucher_code} redeemed for {amount}</p>"

# Regulatory Licenses (leave blank if not applicable)
LICENSE_BSP=
LICENSE_SEC=
LICENSE_NTC=

# Optional: Widget/iframe redemption URL
VOUCHER_WIDGET_URL=

# Optional: Digital signature support (for offline voucher verification)
VOUCHER_ENABLE_SIGNATURES=false
VOUCHER_PUBLIC_KEY=
VOUCHER_PRIVATE_KEY=
