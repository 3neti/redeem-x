# QR Merchant Name Template
# Configure how merchant name appears in QR codes (e.g., GCash display)
# Available variables: {name}, {city}, {app_name}
# Examples:
#   "{name} • {city}"     => "3neti R&D OPC • Manila"
#   "{name}"              => "3neti R&D OPC"
#   "{app_name}"          => "Redeem-X"
#   "{city} - {name}"     => "Manila - 3neti R&D OPC"
QR_MERCHANT_NAME_TEMPLATE="{name} - {city}"
QR_MERCHANT_NAME_UPPERCASE=false
QR_MERCHANT_NAME_FALLBACK="${APP_NAME}"

# Payment Gateway Configuration
PAYMENT_GATEWAY_QR_CACHE_TTL=3600

# NetBank Direct Checkout (Top-Up via redirect to bank/e-wallet)
NETBANK_DIRECT_CHECKOUT_USE_FAKE=true
NETBANK_DIRECT_CHECKOUT_ACCESS_KEY=
NETBANK_DIRECT_CHECKOUT_SECRET_KEY=
NETBANK_DIRECT_CHECKOUT_ENDPOINT=https://api-sandbox.netbank.ph/v1/collect/checkout

# Top-Up Configuration
TOP_UP_MIN_AMOUNT=1
TOP_UP_MAX_AMOUNT=50000
TOP_UP_REFERENCE_PREFIX=TOPUP
# Auto-confirm top-ups in fake mode (for testing)
TOP_UP_AUTO_CONFIRM_FAKE=false

# Public Load Page Configuration (/load/{uuid})
# Configure the public-facing QR code display page
LOAD_WALLET_PUBLIC_SHOW_LOGO=true
LOAD_WALLET_PUBLIC_TITLE_PREFIX="Pay"
LOAD_WALLET_PUBLIC_SHOW_MERCHANT_NAME=true
LOAD_WALLET_PUBLIC_SHOW_MERCHANT_CITY=true
LOAD_WALLET_PUBLIC_INSTRUCTION_TITLE="Scan to Pay"
LOAD_WALLET_PUBLIC_INSTRUCTION_DESCRIPTION="Use your GCash, PayMaya, or any QR Ph compatible app"
LOAD_WALLET_PUBLIC_SHOW_FOOTER=true
# LOAD_WALLET_PUBLIC_FOOTER_TEXT="Custom footer text" # Leave commented for "Powered by {app_name}"
