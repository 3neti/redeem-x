{
    "name": "lbhurtado/form-handler-otp",
    "description": "OTP verification handler for form flow system",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Lester Hurtado",
            "email": "lester@hurtado.ph"
        }
    ],
    "require": {
        "php": "^8.2",
        "3neti/form-flow": "dev-main",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.0",
        "inertiajs/inertia-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "LBHurtado\\FormHandlerOtp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LBHurtado\\FormHandlerOtp\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../../packages/form-flow-manager"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "LBHurtado\\FormHandlerOtp\\OtpHandlerServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
